page{
  background-color: #333333;
  height: 100%;
}
.container{
    height: 100%;
    height: auto; min-height: 100%;
}
.detail{
    padding-bottom: 80rpx;
}
.detail-video-bg{
    height: 420rpx;
    width: 100%;
    position: relative;
}
.detail-video-bg image{
    height: 100rpx;
    width: 100rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -50rpx;
    margin-left: -50rpx;
}
.detail-video{
   height: 420rpx;
   width: 100%;
}
.detail-video-title{
    padding: 10rpx 0  0 20rpx;
    font-size: 28rpx;
    color: #ffffff;
}
.today-video-dec{
     padding: 10rpx 0  30rpx 20rpx;
    font-size: 24rpx;
    color: #ffffff;
}
.detail-channel{
    height: 120rpx;
    border-top: 1rpx solid #ffffff;
    border-bottom: 1rpx solid #ffffff;
    display: flex;
    flex-direction: row;
}
.detail-channel-head{
    padding-left: 20rpx;
    padding-top: 20rpx;
    flex-grow: 1;
}
.detail-channel-lable{
    flex-grow: 2;
    
}
.detail-channel-icon{
    flex-grow: 1;
    font-size: 24rpx;
    color: #ffffff;
    padding-left:20rpx;
    line-height: 100rpx; 
    padding-top: 20rpx;
}
.detail-channel-icon image{
    height: 40rpx;
    width: 40rpx;
}
.detail-channel-head image{
    height: 80rpx;
    width: 80rpx;
    border-radius: 50%;
}
.detail-channel-name{
    font-size: 24rpx;
    color: #ffffff;
    padding: 24rpx 0 0 0px;
}
.detail-channel-summary{
    height: 28rpx;
   font-size: 24rpx;
    color: #ffffff;
    padding: 12rpx 0 0 0px;
    width: 450rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;  
}
.detail-video-summary{
    
    padding: 30rpx 20rpx 0;
    font-size: 28rpx;
    color: #ffffff;
    line-height: 40rpx;
}
.detail-foot{
    position: relative;
    margin-top: -120rpx; /* footer高度的负值 */
    clear:both;
    display: flex;
    flex-direction: row;
    height: 80rpx;
    line-height: 80rpx;
}
.detail-foot text{
    font-size: 40rpx;
    color: #ffffff;
    padding-left: 10rpx;
}
.detail-foot-collect{
    flex: 1;
    text-align: center;
    border-right: 0.5px solid #ffffff;
}
.detail-foot-share{
    flex: 1;
    text-align: center;
    border-right: 0.5px solid #ffffff;
}
.detail-foot-pinglun{
    flex: 1;
    text-align: center;
}
.detail-foot-collect image{
   width: 40rpx;
   height: 36rpx;
}
.detail-foot-share image{
   width: 50rpx;
   height: 30rpx;
}
.detail-foot-pinglun image{
   width: 40rpx;
   height: 40rpx;
}
.clear:after {
    content: ".";
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
}
.clear{display: inline-block;}